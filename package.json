{
  "name": "fsmator",
  "version": "0.1.1",
  "description": "A lightweight and type-safe state machine library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "examples": "npx tsx examples/index.ts",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "state-machine",
    "state",
    "reducer",
    "typescript",
    "fsm",
    "finite-state-machine"
  ],
  "author": "Konstantin Y. Rybakov",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viocost/fsmator.git"
  },
  "bugs": {
    "url": "https://github.com/viocost/fsmator/issues"
  },
  "homepage": "https://github.com/viocost/fsmator#readme",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
